<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
	<div class='media-body'>
		<div class='row'>
			<div class='col-md-7'>
				<%= item.name %>
			</div>
			<div class='col-md-3'>
				<%= item.days_left %> days left!
			</div>
			<div class='col-md-2'>
				<%= link_to "", [item.user, item], method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
			</div>
		</div>
	</div>
<% end %>
